    class com.example.polynomial.PolynomialsView {
        - DB_NAME : String
        - TABLE_NAME : String
        - adapter : ArrayAdapter
        - funcsDivided : ArrayList<ArrayList<tableRow>>
        - functions : ArrayList<String>
        - polDB : SQLiteDatabase
        - polsList : ListView
        - rows : ArrayList<tableRow>
        + onStart()
        # onCreate()
        - buildFunctionFormula()
        - buildPols()
        - createFunctionsList()
        - divideFuncs()
        - getNumber()
    }
  }
  

  namespace com.example.polynomial {
    class com.example.polynomial.tableRow {
        - coefficient : double
        - funcID : int
        - power : int
        + getCoefficient()
        + getFuncID()
        + getPower()
        + setCoefficient()
        + tableRow()
    }
  }
  

