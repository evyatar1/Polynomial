        - caption : EditText
    }
  }
  

  namespace com.example.polynomial {
    class com.example.polynomial.PolynomialActions {
        - DB_NAME : String
        - TABLE_NAME : String
        - cList : ListView
        - funcTitle : TextView
        - function : ArrayList<tableRow>
        - polDB : SQLiteDatabase
        - polFormula : String
        + deleteThePol()
        + gotoGraph()
        + updateThePol()
        # onCreate()
        - buildFunctionFormula()
        - buildList()
        - getNumber()
        - updateTitle()
    }
  }
  

  namespace com.example.polynomial {
    class com.example.polynomial.PolynomialActions.ListItem {
